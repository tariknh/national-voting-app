@model WebApplication1.Models.VoteViewModel

@{
    ViewData["Title"] = "Stortingsvalg 2025";
    var displayName = string.IsNullOrWhiteSpace(Model.FullName) ? "Velger" : Model.FullName;
    var parties = Model.Parties ?? Array.Empty<string>();
    var voteInstructionId = "vote-instructions";
    var voteStatusId = "vote-status";
}

@section Styles {
    <style>
        .vote-hero {
            background: #00205b;
            color: #fff;
            border-radius: 12px;
            padding: 2.5rem;
            margin-bottom: 2rem;
        }

        .vote-chip {
            display: inline-flex;
            gap: 0.5rem;
            align-items: center;
            padding: 0.35rem 0.85rem;
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.2);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
        }

        .vote-card {
            border: 1px solid #dfe3ec;
            border-radius: 12px;
            padding: 1.75rem;
            background: #fff;
        }

        .vote-card--muted {
            background: #f6f8fb;
        }

        .vote-section-title {
            font-size: 0.82rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: #4e596d;
            margin-bottom: 0.4rem;
            font-weight: 600;
        }

        .vote-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
        }

        .vote-fieldset {
            border: 0;
            padding: 0;
            margin: 0;
        }

        .vote-fieldset legend {
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .vote-option {
            border: 1px solid #e3e7f0;
            border-radius: 10px;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #f9fafc;
        }

        .vote-option input[type="radio"] {
            accent-color: #00205b;
            width: 1.1rem;
            height: 1.1rem;
        }

        .vote-alert {
            border-radius: 10px;
            padding: 1rem 1.25rem;
            background: #fef9e6;
            border: 1px solid #f3dd9c;
            color: #4e3b00;
        }

        .valg-link {
            color: #0056b4;
            text-decoration: underline;
            font-weight: 600;
        }

        .vote-modal-backdrop {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.55);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1050;
        }

        .vote-modal-backdrop.show {
            display: flex;
        }

        .vote-modal {
            background: #fff;
            border-radius: 16px;
            max-width: 480px;
            width: 100%;
            padding: 2rem;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
        }

        .vote-modal h2 {
            font-size: 1.4rem;
            margin-bottom: 0.75rem;
        }
    </style>
}

<div class="container py-5">
    <section class="vote-hero">
        <span class="vote-chip">Stortingsvalg 2025</span>
        <h1 class="mt-3 mb-2">Hei @displayName</h1>
        <p class="lead mb-4">
            Du er logget inn og kan levere stemmen din digitalt. Følg stegene, velg parti og signer for å motta kvittering.
        </p>
        <div class="d-flex flex-wrap gap-3">
            <p class="mb-0">Kommune registrert: <strong>@(Model.Kommune ?? "Ukjent")</strong></p>
            <span class="text-white-75">Status: @(Model.HasVoted ? "Allerede stemt" : "Ikke stemt ennå")</span>
        </div>
    </section>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="vote-alert mb-4" role="status" aria-live="polite" id="@voteStatusId">
            @Model.StatusMessage
        </div>
    }

    <div class="row gy-4">
        <div class="col-lg-8">
            <div class="vote-card mb-4">
                <p class="vote-section-title">Slik stemmer du</p>
                <ol class="ps-3">
                    <li>Velg partiet ditt nedenfor.</li>
                    <li>Kontroller at informasjonen stemmer.</li>
                    <li>Send inn stemmen og motta kvittering.</li>
                </ol>
            </div>

            <div class="vote-card">
                <p class="vote-section-title">Velg parti</p>

                @if (Model.HasVoted)
                {
                    <p class="mb-0">Du har allerede avgitt stemmen din. Kontakt støtte dersom du trenger å trekke den tilbake.</p>
                }
                else
                {
                    <form asp-action="SubmitVote" method="post" aria-describedby="@voteInstructionId" id="vote-form">
                        @Html.AntiForgeryToken()
                        <fieldset class="vote-fieldset">
                            <legend>Velg hvilket parti du ønsker å stemme på</legend>
                            <p id="@voteInstructionId" class="text-muted">Velg nøyaktig ett parti fra listen for å gå videre.</p>
                            <div class="vote-grid" role="radiogroup" aria-describedby="@voteInstructionId">
                                @for (var i = 0; i < parties.Count; i++)
                                {
                                    var party = parties[i];
                                    var optionId = $"party-option-{i}";
                                    <label class="vote-option" for="@optionId">
                                        <span class="fw-semibold">@party</span>
                                        <input type="radio" id="@optionId" name="party" value="@party" required />
                                    </label>
                                }
                            </div>
                        </fieldset>

                        <div class="d-flex flex-wrap gap-3 align-items-center mt-4">
                            <a asp-controller="Home" asp-action="Index" class="valg-link">← Tilbake til forsiden</a>
                            <button type="submit" class="btn-idporten btn btn-lg fw-semibold ms-auto">Avgi stemme</button>
                        </div>
                    </form>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="vote-card vote-card--muted mb-4">
                <p class="vote-section-title">Status</p>
                <p class="mb-1"><strong>Kommune:</strong> @(Model.Kommune ?? "Ukjent")</p>
                <p class="mb-1"><strong>Stemmegivning:</strong> @(Model.HasVoted ? "Fullført" : "Ikke sendt" )</p>
                <p class="mb-0 text-muted">Du kan trekke stemmen tilbake frem til fristen.</p>
            </div>

            <div class="vote-card">
                <p class="vote-section-title">Trenger du hjelp?</p>
                <p>Ring valgveiledning på <a href="tel:+4780008080">800 08 080</a> eller send en e-post til <a href="mailto:valg@brukerstotte.no">valg@brukerstotte.no</a>.</p>
                <p class="mb-0 small text-muted">Åpen alle dager 08–22. Tegnspråktolk man–fre 10–18.</p>
            </div>
        </div>
    </div>
</div>

<div class="vote-modal-backdrop" id="voteConfirmModal" role="dialog" aria-modal="true" aria-labelledby="voteConfirmTitle" aria-describedby="voteConfirmText">
    <div class="vote-modal">
        <p class="vote-section-title mb-2" id="voteConfirmTitle">Bekreft stemme</p>
        <h2 id="voteConfirmHeadline">Er du sikker?</h2>
        <p id="voteConfirmText">Du er i ferd med å stemme på <strong id="voteConfirmParty"></strong>. Stemmen registreres umiddelbart når du bekrefter.</p>
        <div class="d-flex justify-content-end gap-3 mt-4">
            <button type="button" class="btn btn-outline-secondary" id="cancelVoteBtn">Avbryt</button>
            <button type="button" class="btn-idporten btn" id="confirmVoteBtn">Bekreft og send inn</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('vote-form');
            if (!form) {
                return;
            }
            const modal = document.getElementById('voteConfirmModal');
            const confirmBtn = document.getElementById('confirmVoteBtn');
            const cancelBtn = document.getElementById('cancelVoteBtn');
            const partyLabel = document.getElementById('voteConfirmParty');

            const hideModal = () => {
                modal.classList.remove('show');
            };

            const showModal = (partyName) => {
                partyLabel.textContent = partyName;
                modal.classList.add('show');
            };

            form.addEventListener('submit', (event) => {
                if (form.dataset.voteConfirmed === 'true') {
                    form.dataset.voteConfirmed = 'false';
                    return;
                }

                const selected = form.querySelector('input[name="party"]:checked');
                if (!selected) {
                    return;
                }

                event.preventDefault();
                showModal(selected.value);
            });

            confirmBtn?.addEventListener('click', () => {
                form.dataset.voteConfirmed = 'true';
                hideModal();
                form.requestSubmit();
            });

            cancelBtn?.addEventListener('click', () => {
                hideModal();
            });

            modal?.addEventListener('click', (event) => {
                if (event.target === modal) {
                    hideModal();
                }
            });
        });
    </script>
}
