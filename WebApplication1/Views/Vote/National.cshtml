@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Stortingsvalg 2025 ‚Äì Digital Valgportal";

    var navn = ViewBag.UserFullName as string ?? "Velger";
    var parties = ViewBag.Parties as List<string> ?? new List<string>();
    var message = TempData["VoteMessage"] as string;
}

<section class="ds-container mx-auto max-w-3xl py-10 min-h-screen">
    <div class="ds-card shadow-md border border-gray-200 rounded-lg p-8 bg-white w-full h-auto">



    <header class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Stortingsvalg 2025</h1>
            <p class="text-gray-600">Velkommen, <strong>@navn</strong> üëã Du kan avgi din stemme til √•rets stortingsvalg her.</p>
        </header>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="ds-alert ds-alert--success mb-6">
                <strong>@message</strong>
            </div>
        }

        <div class="ds-card__section mb-8">
            <h2 class="text-xl font-semibold mb-3 text-gray-800">Slik fungerer det</h2>
            <ol class="list-decimal list-inside text-gray-700 leading-relaxed">
                <li>Velg partiet du √∏nsker √• stemme p√•.</li>
                <li>Bekreft valget ditt ved √• trykke ‚ÄúAvgi stemme‚Äù.</li>
                <li>Etter innsending blir stemmen registrert og l√•st.</li>
            </ol>
        </div>

        <form asp-action="SubmitVote" method="post" class="ds-card__section">
            <h2 class="text-xl font-semibold mb-4 text-gray-800">Velg ditt parti</h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4
">
                @foreach (var party in parties)
                {
                    <label for="@party" class="block border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition-all duration-200 cursor-pointer bg-gray-50 hover:bg-white">
                        <div class="flex items-center justify-between">
                            <span class="text-gray-900 font-medium">@party</span>
                            <input type="radio" id="@party" name="party" value="@party" required class="accent-blue-600 scale-125" />
                        </div>
                    </label>
                }
            </div>

            <div class="mt-8 flex items-center">
                <a asp-controller="Home" asp-action="Index" class="ds-link text-blue-700 hover:underline">
                    ‚Üê Tilbake til forsiden
                </a>

                <button type="submit" class="btn-primary px-6 py-2 rounded-md shadow-sm ml-auto">
                    Avgi stemme
                </button>
            </div>


        </form> 
    </div>
</section>
