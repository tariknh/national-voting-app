@model WebApplication1.Models.ContactViewModel

@{
    ViewData["Title"] = "Kontakt valgportalen";
}

@section Styles {
    <style>
        .contact-hero {
            background: #f6f8fb;
            border: 1px solid #e3e7f0;
            border-radius: 16px;
            padding: 2.75rem;
            margin-bottom: 2rem;
        }

        .contact-chip {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.35rem 0.85rem;
            border-radius: 999px;
            background-color: #e0e7ff;
            color: #001b3f;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.08em;
        }

        .contact-card {
            border: 1px solid #dfe3ec;
            border-radius: 12px;
            padding: 1.75rem;
            background: #fff;
        }

        .contact-card--muted {
            background: #f6f8fb;
        }

        .contact-section-title {
            font-size: 0.82rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: #4e596d;
            margin-bottom: 0.45rem;
            font-weight: 600;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
        }

        .contact-grid-item {
            border: 1px solid #e7ebf5;
            border-radius: 10px;
            padding: 1rem;
            background: #f9fafc;
        }

        .contact-grid-item strong {
            display: block;
            margin-bottom: 0.25rem;
        }

        .contact-list {
            list-style: none;
            padding-left: 0;
            margin-bottom: 0;
        }

        .contact-list li {
            border-top: 1px solid #eceff5;
            padding: 0.8rem 0;
        }

        .contact-list li:first-child {
            border-top: 0;
        }

        .contact-support {
            background: #001b3f;
            color: #fff;
        }

        .contact-support a {
            color: #fff;
            font-weight: 600;
        }

        .contact-link {
            color: #0056b4;
            text-decoration: underline;
            font-weight: 600;
        }
    </style>
}

<div class="container py-5">
    <section class="contact-hero">
        <span class="contact-chip">Kontakt oss</span>
        <h1 class="mt-3">Vi er her for å hjelpe deg</h1>
        <p class="lead">
            Har du spørsmål om digital stemmegivning, eller trenger du assistanse med ID-porten? Vårt team svarer alle dager 08–22.
        </p>
        <div class="d-flex flex-wrap gap-4 text-muted small">
            <div>
                <p class="mb-1 text-uppercase fw-semibold">Åpningstider</p>
                <p class="mb-0">Alle dager 08–22</p>
            </div>
            <div>
                <p class="mb-1 text-uppercase fw-semibold">Tegnspråk</p>
                <p class="mb-0">Man–fre 10–18</p>
            </div>
            <div>
                <p class="mb-1 text-uppercase fw-semibold">Responstid</p>
                <p class="mb-0">Under 2 minutter i chat</p>
            </div>
        </div>
    </section>

    <div class="row gy-4">
        <div class="col-lg-7">
            <div class="contact-card mb-4">
                <p class="contact-section-title">Hovedkanaler</p>
                <div class="contact-grid">
                    <div class="contact-grid-item">
                        <strong>Ring oss</strong>
                        <p class="mb-1">800 08 080</p>
                        <p class="mb-0 small text-muted">Åpen 08–22 alle dager</p>
                    </div>
                    <div class="contact-grid-item">
                        <strong>Send e-post</strong>
                        <p class="mb-1"><a href="mailto:valg@brukerstotte.no" class="contact-link">valg@brukerstotte.no</a></p>
                        <p class="mb-0 small text-muted">Vi svarer innen ett arbeidsdøgn</p>
                    </div>
                    <div class="contact-grid-item">
                        <strong>Chat</strong>
                        <p class="mb-1">Start veiledet chat</p>
                        <p class="mb-0 small text-muted">Tilgjengelig i menyen nederst til høyre</p>
                    </div>
                </div>
            </div>

            <div class="contact-card contact-card--muted">
                <p class="contact-section-title">Vanlige henvendelser</p>
                <ul class="contact-list">
                    <li>Problemer med innlogging via ID-porten.</li>
                    <li>Spørsmål om status på innsendt stemme.</li>
                    <li>Hjelp til å trekke tilbake eller endre stemme før fristen.</li>
                    <li>Tilgang til tilrettelagte løsninger og tegnspråktolk.</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-5">
            @if (Model.IsLoggedIn)
            {
                <div class="contact-card mb-4">
                    <p class="contact-section-title">Din informasjon</p>
                    <p class="mb-1"><strong>Navn:</strong> @Model.FullName</p>
                    @if (!string.IsNullOrWhiteSpace(Model.Email))
                    {
                        <p class="mb-1"><strong>E-post:</strong> @Model.Email</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Kommune))
                    {
                        <p class="mb-0"><strong>Kommune:</strong> @Model.Kommune</p>
                    }
                    else
                    {
                        <p class="mb-0"><strong>Kommune:</strong> Ikke registrert</p>
                    }
                </div>
            }

            <div class="contact-card contact-support">
                <p class="contact-section-title text-white-50">Rask hjelp</p>
                <h2 class="h5 text-white">Ring 800 08 080</h2>
                <p class="mb-2">Åpen hele valgsperioden. Vi kan veilede deg steg for steg på telefon.</p>
                <p class="mb-2"><a href="mailto:valg@brukerstotte.no">valg@brukerstotte.no</a></p>
                <p class="small mb-0">Du kan også booke en tilbakeringing dersom du foretrekker det.</p>
            </div>
        </div>
    </div>
</div>
